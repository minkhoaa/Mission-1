datasource db {
  provider = "mongodb"
  
}

generator client {
  provider = "prisma-client-js"
}

enum Gender {
  M
  F
}

enum TodoListStatus {
  UNFINISHED
  FINISH
}

enum TodoItemStatus {
  TODO
  IN_PROCESS
  FINISH
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  gender    Gender
  dob       DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  todoLists TodoList[]
}

model TodoList {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  userId    String          @db.ObjectId
  status    TodoListStatus  @default(UNFINISHED)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  items     TodoItem[]
}

model TodoItem {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  todoGroupId String          @db.ObjectId
  name        String
  des         String?
  dueAt       DateTime
  status      TodoItemStatus  @default(TODO)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  todoList    TodoList @relation(fields: [todoGroupId], references: [id])
}
